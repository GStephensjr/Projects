@model IEnumerable<NumberedAF>

<h3 class="bg-secondary p-2 text-white text-center">
    Numbered Air Forces
</h3>
<style>
    .card-header{text-decoration :underline;}
</style>
@foreach (NumberedAF m in Model)
{
    <div class="card text-white bg-secondary mb-3 d-inline-flex" style="max-width: 20rem;">
        <a  asp-route-Name="@m.Name" asp-action="NumberedAFEntry" class="card-header" font="bold">@m.Name</a>
        <div class="card-body">
            @if (m.Motto != "")
            {<h5 class="card-title">"@m.Motto"</h5>}

            <h6 class="card-text">@m.Location</h6>
        </div>
    </div>
}
