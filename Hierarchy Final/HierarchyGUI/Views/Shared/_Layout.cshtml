<!DOCTYPE html>
<html>
<head>
    <meta name="viewport"  content="width=device-width" />
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <title>Air Force Structure</title>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/Darkly Bootstrap/*.min.css" />
</head>
<body>
    @if (SessionCredentials.User != null)
    {<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="home">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Logout">Logout</a>
                </li>
            </ul>
            @if (SessionCredentials.Status == true)
            {<div align="right"><ul class="navbar-nav mr-auto"><li class="nav-item"><a class="nav-link" href="ListUsers">Users</a></li></ul></div>}
            <form class="form-inline my-2 my-lg-0" asp-action="Search" method="post">
                <input class="form-control mr-sm-2" id="query" name="query" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
     </nav>}

    @RenderBody()
