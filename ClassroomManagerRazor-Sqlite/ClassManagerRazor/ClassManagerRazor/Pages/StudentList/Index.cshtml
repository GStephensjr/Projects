@page
@model ClassManagerRazor.Pages.StudentList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container row">
    <div class="col-6">
        <h2 class="text-info">Current Students</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-page="Add" class="btn btn-primary">Add Student</a>
    </div>
</div>

<form method="post">
    @if (Model.Students.Count() > 0)
    {
        <br /><br />
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>@Html.DisplayNameFor(c => c.Students.FirstOrDefault().fName)</th>
                <th>@Html.DisplayNameFor(c => c.Students.FirstOrDefault().mName)</th>
                <th>@Html.DisplayNameFor(c => c.Students.FirstOrDefault().lName)</th>
                <th>@Html.DisplayNameFor(c => c.Students.FirstOrDefault().eMail)</th>
                <th>@Html.DisplayNameFor(c => c.Students.FirstOrDefault().gitHub)</th>
                <th>@Html.DisplayNameFor(c => c.Students.FirstOrDefault().linkedIn)</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Students)
            {
                <tr>
                    <td>@Html.DisplayFor(c => item.fName)</td>
                    <td>@Html.DisplayFor(c => item.mName)</td>
                    <td>@Html.DisplayFor(c => item.lName)</td>
                    <td>@Html.DisplayFor(c => item.eMail)</td>
                    <td>@Html.DisplayFor(c => item.gitHub)</td>
                    <td>@Html.DisplayFor(c => item.linkedIn)</td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete this book?');" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-route-id="@item.ID" asp-page="Edit" class="btn btn-success btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p></p>
    }
</form>