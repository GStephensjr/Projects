@page
@model ClassManagerRazor.Pages.StudentList.AddModel
@{
    ViewData["Title"] = "Add";
}

<br />
<h2 class="text-info">Add a Student</h2>
<br />

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style=" padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Student.ID"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Student.ID" class="form-control" />
                    </div>
                    <span asp-validation-for="Student.ID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Student.fName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Student.fName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Student.mName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Student.mName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Student.lName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Student.lName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Student.eMail"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Student.eMail" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Student.gitHub"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Student.gitHub" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Student.linkedIn"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Student.linkedIn" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Add" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}